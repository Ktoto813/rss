local player = game.Players.LocalPlayer
local PlayerGui = player:WaitForChild("PlayerGui")

-- === GUI ===
local screenGui = Instance.new("ScreenGui", PlayerGui)

local buttonStart = Instance.new("TextButton")
buttonStart.Size = UDim2.new(0,200,0,50)
buttonStart.Position = UDim2.new(0.5,-100,0.5,-60)
buttonStart.Text = "Start AutoGK"
buttonStart.Parent = screenGui

local buttonStop = Instance.new("TextButton")
buttonStop.Size = UDim2.new(0,200,0,50)
buttonStop.Position = UDim2.new(0.5,-100,0.5,10)
buttonStop.Text = "Stop AutoGK"
buttonStop.Parent = screenGui

-- === AutoGK функции ===
local AutoGK = {}
local running = false

function AutoGK.Start()
    if running then return end
    running = true
    print("AutoGK запущен!")
    -- сюда твой код авто-сейва
    while running do
        wait(5) -- например каждые 5 секунд авто-сейв
        print("Сохраняем прогресс...")
    end
end

function AutoGK.Stop()
    running = false
    print("AutoGK остановлен!")
end

-- === Связка с кнопками ===
buttonStart.MouseButton1Click:Connect(AutoGK.Start)
buttonStop.MouseButton1Click:Connect(AutoGK.Stop)
