-- Авто GUI + Авто ГК Сейв + Автопрыжок на Q и E
-- Настройка GUI
local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")

local player = Players.LocalPlayer
local mouse = player:GetMouse()

-- GUI
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "AutoGK_GUI"
ScreenGui.Parent = player:WaitForChild("PlayerGui")

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 300, 0, 150)
frame.Position = UDim2.new(0.5, -150, 0.5, -75)
frame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
frame.Parent = ScreenGui

local title = Instance.new("TextLabel")
title.Text = "AutoGK + Jump"
title.Size = UDim2.new(1, 0, 0, 30)
title.BackgroundTransparency = 1
title.TextColor3 = Color3.new(1, 1, 1)
title.Parent = frame

-- Флаги
local autoSaveEnabled = true
local autoJumpEnabled = true

-- Функция автосейва ГК
local function saveGK()
    -- Здесь нужно вставить твой код сохранения ГК
    -- Например, если у тебя есть функция saveGoalKeeper(), вызываем её:
    if autoSaveEnabled then
        pcall(function()
            if player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
                -- Пример логики: мяч летит к игроку — сейвим
                -- Можешь изменить под твою игру
                local ball = workspace:FindFirstChild("Ball")
                if ball and (ball.Position - player.Character.HumanoidRootPart.Position).Magnitude < 20 then
                    print("Сейвим мяч!")
                    -- сюда вставь свою логику сейва
                end
            end
        end)
    end
end

-- Автопрыжок на Q и E
local function onInputBegan(input, gameProcessed)
    if gameProcessed then return end
    if autoJumpEnabled then
        if input.KeyCode == Enum.KeyCode.Q or input.KeyCode == Enum.KeyCode.E then
            if player.Character and player.Character:FindFirstChild("Humanoid") then
                player.Character.Humanoid.Jump = true
            end
        end
    end
end

UserInputService.InputBegan:Connect(onInputBegan)

-- Цикл автосейва
RunService.RenderStepped:Connect(function()
    saveGK()
end)

print("AutoGK GUI запущен ✅")
