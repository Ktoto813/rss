local Players = game:GetService("Players")
local player = Players.LocalPlayer

function autoSave()
    while wait(0.1) do
        local ball = workspace:FindFirstChild("ball")
        local goalModel = workspace:FindFirstChild("HomeGoal") -- если ты домашний ГК
        -- если играешь за гостя: local goalModel = workspace:FindFirstChild("AwayGoal")
        local goalPart = nil
        if goalModel then
            for _, obj in pairs(goalModel:GetChildren()) do
                if obj:IsA("BasePart") then
                    goalPart = obj
                    break
                end
            end
        end

        if ball and goalPart and player.Character then
            local gkPos = goalPart.Position
            local ballPos = ball.Position
            local delta = (ballPos - gkPos).magnitude
            if delta < 15 then
                player.Character:MoveTo(ball.Position)
            else
                player.Character:MoveTo(gkPos)
            end
        end
    end
end

spawn(autoSave)
