-- Авто-Сейв Голкипер для Realistic Street Soccer
local Players = game:GetService("Players")
local player = Players.LocalPlayer
local ball = workspace:FindFirstChild("SoccerBall") -- Проверь точное имя мяча!
local goal = workspace:FindFirstChild("Goal") -- Проверь точное имя ворот!

function autoSave()
    while wait(0.1) do
        if ball and goal and player and player.Character then
            local gkPos = goal.Position
            local ballPos = ball.Position
            local delta = (ballPos - gkPos).magnitude
            if delta < 15 then -- если мяч близко к воротам
                player.Character:MoveTo(ball.Position) -- переместить к мячу
            else
                player.Character:MoveTo(gkPos) -- удерживать позицию в воротах
            end
        end
    end
end

spawn(autoSave)

--[[
Этот скрипт создаёт GUI с кнопкой для включения/выключения авто-сейва гк
--]]

local player = game.Players.LocalPlayer

-- Создадим gui
local ScreenGui = Instance.new("ScreenGui")
local Frame = Instance.new("Frame")
local ToggleButton = Instance.new("TextButton")

ScreenGui.Parent = player.PlayerGui
Frame.Parent = ScreenGui
Frame.Size = UDim2.new(0, 150, 0, 60)
Frame.Position = UDim2.new(0, 200, 0, 300)
Frame.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
Frame.BorderSizePixel = 0

ToggleButton.Parent = Frame
ToggleButton.Size = UDim2.new(1, 0, 1, 0)
ToggleButton.Position = UDim2.new(0, 0, 0, 0)
ToggleButton.BackgroundColor3 = Color3.fromRGB(90, 200, 90)
ToggleButton.Text = "Авто-Сейв: OFF"
ToggleButton.TextColor3 = Color3.new(1,1,1)

local running = false
local autoSaveConnection

local function autoSave()
    local workspace = game:GetService("Workspace")
    local ball = workspace:FindFirstChild("SoccerBall")
    local goal = workspace:FindFirstChild("Goal")
    while running do
        wait(0.1)
        if ball and goal and player.Character then
            local gkPos = goal.Position
            local ballPos = ball.Position
            local delta = (ballPos - gkPos).magnitude
            if delta < 15 then
                player.Character:MoveTo(ball.Position)
            else
                player.Character:MoveTo(gkPos)
            end
        end
    end
end

ToggleButton.MouseButton1Click:Connect(function()
    running = not running
    if running then
        ToggleButton.Text = "Авто-Сейв: ON"
        spawn(autoSave)
    else
        ToggleButton.Text = "Авто-Сейв: OFF"
    end
end)
